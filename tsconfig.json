{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "include": [
    "server.ts",
    "backend/src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "**/*.js"
  ]
}
